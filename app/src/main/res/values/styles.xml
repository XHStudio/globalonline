<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ac_base_backgroud</item>
        <item name="colorPrimaryDark">@color/ac_base_backgroud</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="header_style" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="dialog_sel">

        <!--<item name="android:colorBackgroundCacheHint">@null</item>-->
        <!--是否有标题 -->
        <item name="android:windowNoTitle">true</item>

        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="ButtomBar">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="ButtomBarImgBtn">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <!--end-->

    <style name="editText">
        <item name="android:textColorHint">@color/ac_user_registerd_hint</item>
        <item name="android:textColor">@color/ac_user_registerd_hint</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="text_title">
        <item name="android:textColor">@color/ac_base_ziti_hui</item>
        <item name="android:textSize">14dp</item>
        <item name="android:text">...</item>
    </style>
    <style name="text">
        <!--<item name="android:textColor">@color/ac_base_ziti_hui</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14dp</item>
        <item name="android:text">...</item>
    </style>
    <style name="text_12">
        <!--<item name="android:textColor">@color/ac_base_ziti_hui</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12dp</item>
        <item name="android:text">...</item>
    </style>
    <style name="text_16">
        <!--<item name="android:textColor">@color/ac_base_ziti_hui</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:text">...</item>
    </style>
    <style name="titleText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14dp</item>
        <item name="android:text">...</item>

    </style>


    <style name="Center">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="CenterBottom">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="BottomRight">paddingRight paddingRight
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:padding">10dp</item>
    </style>

    <!--<item name="android:paddingBottom">10dp</item>-->
    <!--<item name="android:paddingLeft">10dp</item>-->
    <style name="BottomLeft">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="CenterTop">paddingTop
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="CenterTopRight">paddingTop paddingRight
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="CenterTopLeft">paddingLeft paddingTop
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="AnimLineIndicator">
        <item name="ci_width">10dp</item>
        <item name="ci_height">4dp</item>
        <item name="ci_margin">6dp</item>
        <item name="ci_animator">@animator/translation_and_rotate</item>
        <item name="ci_drawable">@drawable/balck_radius_square</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
