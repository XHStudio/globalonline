<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:myxmlns="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"

    >
    <com.global.globalonline.view.MainTitleView_
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        myxmlns:titletxt="@string/act_mainTab_tradingFloor_title"
        myxmlns:backtxt="no"
        />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <FrameLayout
            android:id="@+id/fl_mian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/devide_line" />
    <LinearLayout
        android:id="@+id/buttom_bar_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:background="@color/ac_mainTab_bottom"
        android:orientation="horizontal">
        <RelativeLayout style="@style/ButtomBar">

            <ImageButton
                android:id="@+id/ibtn_homepage"
                android:layout_width="32dp"
                android:layout_height="32dp"
                style="@style/ButtomBarImgBtn"
                android:background="@drawable/bar_homepage"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>
        <RelativeLayout
            style="@style/ButtomBar">
            <ImageButton
                android:id="@+id/ibtn_tradingfloor"
                android:layout_width="32dp"
                android:layout_height="32dp"
                style="@style/ButtomBarImgBtn"
                android:background="@drawable/bar_tradingfloor"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>
        <RelativeLayout style="@style/ButtomBar">

            <ImageButton
                android:id="@+id/ibtn_my"
                android:layout_width="32dp"
                android:layout_height="32dp"
                style="@style/ButtomBarImgBtn"
                android:background="@drawable/bar_my"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
