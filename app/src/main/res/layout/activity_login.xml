<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:myxmlns="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/ac_user_login"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    tools:context="com.global.globalonline.activities.user.LoginActivity">


    <com.global.globalonline.view.TitleView_
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        myxmlns:backtxt = "no"
        myxmlns:titletxt="@string/act_user_login_title"
        myxmlns:operationtxt="@string/act_user_login_opera"
        />


   <LinearLayout
       android:layout_marginTop="40dp"
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:background="@drawable/act_ll_biankuang"
       android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/act_registered_higth"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_country"
                />

            <TextView
                android:id="@+id/tv_guojia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14dp"
                android:hint="@string/act_user_registered_guojia"
                android:layout_marginLeft="6dp"
                android:drawableRight="@drawable/tiangle"
                style="@style/editText"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/E4E4E4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/act_registered_higth"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:src="@drawable/act_user_login_phone"
                />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:maxLength="11"
                android:layout_marginLeft="6dp"
                style="@style/editText"
                android:hint="@string/act_user_login_phone"
                />
        </LinearLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@color/E4E4E4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/act_registered_higth"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_lock"
                />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_marginLeft="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/editText"
                android:inputType="textPassword"
                android:minLines="6"
                android:maxLength="18"
                android:hint="@string/act_user_login_pwd"
                />
        </LinearLayout>
   </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <Button
            android:id="@+id/bt_loging"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/act_user_login_loging"
            android:textColor="@color/white"
            android:background="@drawable/act_login_loging"
            />
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/ac_user_login_hint"
        android:visibility="gone"
        android:text="@string/act_user_login_kefuphone"
        />

    <TextView
        android:id="@+id/tv_wangJiPWD"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="@string/act_user_login_wangjipwd"
        />


</LinearLayout>
