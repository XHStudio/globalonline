<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:myxmlns="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/ac_user_login"
    tools:context="com.global.globalonline.activities.user.RegisteredActivity">

    <com.global.globalonline.view.TitleView_
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        myxmlns:titletxt="@string/act_user_registered_zhuce"

        />


    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_registered_higth"
        android:background="@color/ac_user_login_phone"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/act_user_login_pwd"
            />

        <TextView
            android:id="@+id/tv_guojia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:hint="@string/act_user_registered_guojia"
            style="@style/editText"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_registered_higth"
        android:background="@color/ac_user_login_phone"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/act_user_login_phone"
            />

        <EditText
            android:id="@+id/et_phone"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="@string/act_user_registered_phone"
            android:inputType="number"
            android:maxLength="11"
            style="@style/editText"
            />
        <Button
            android:id="@+id/btn_send_code"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginRight="4dp"
            android:background="@drawable/act_regidtered_getyanzhengma"
            android:text="@string/act_user_registered_getyanzhengma"
            android:textColor="@color/view_titleview_fanhui"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_registered_higth"
        android:background="@color/ac_user_login_phone"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/act_user_login_pwd"
            />

        <EditText
            android:id="@+id/et_yanzhengma"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/act_user_registered_yanzhengma"
            style="@style/editText"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_registered_higth"
        android:background="@color/ac_user_login_phone"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/act_user_login_pwd"
            />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/act_user_registered_pwd"
            style="@style/editText"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_registered_higth"
        android:background="@color/ac_user_login_phone"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/act_user_login_pwd"
            />

        <EditText
            android:id="@+id/et_rePwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/act_user_registered_repwd"
            style="@style/editText"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_registered_higth"
        android:background="@color/ac_user_login_phone"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/act_user_login_pwd"
            />

        <EditText
            android:id="@+id/et_tuijianren"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/act_user_registered_tuijianren"
            style="@style/editText"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_registered_higth"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_agree"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/act_user_registered_text"
            android:textColor="@color/ac_user_registerd_hint"
            />
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="@dimen/act_registered_higth"
            android:text="@string/act_user_registered_xieyi"
            android:textColor="@color/view_titleview_fanhui"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <Button
            android:id="@+id/btn_tijiao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/act_user_registered_zhuce"
            android:textColor="@color/white"
            android:background="@drawable/act_login_loging"
            />
    </LinearLayout>




</LinearLayout>
