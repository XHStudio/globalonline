<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:myxmlns="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/ac_base_backgroud"
    android:focusableInTouchMode="true"
    tools:context="com.global.globalonline.activities.RMB.WithdrawalRMBActivity">


    <com.global.globalonline.view.TitleView_
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        myxmlns:titletxt="@string/act_WithdrawalRMBActivity_title"
        myxmlns:operationtxt="@string/act_WithdrawalRMBActivity_op"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/act_ll_biankuang"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/act_registered_higth"
            android:background="@drawable/et_input"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            >

            <TextView

                android:id="@+id/tv_banktype"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/act_WithdrawalRMBActivity_banktype"
                style="@style/editText"
                android:paddingRight="6dp"
                android:drawableRight="@drawable/xiala_bai"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/act_registered_higth"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:background="@color/white"
            >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/icon_price"
                android:layout_marginRight="8dp"
                />

            <EditText
                android:id="@+id/et_cardNum"
                android:inputType="number"
                android:maxLength="23"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingRight="6dp"
                android:hint="@string/act_WithdrawalRMBActivity_bankNumber"
                style="@style/editText"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/E4E4E4"/>
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/act_registered_higth"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            >
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/icon_price"
                android:layout_marginRight="8dp"
                />

            <EditText
                android:id="@+id/et_reCardNum"
                android:inputType="number"
                android:maxLength="23"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/act_WithdrawalRMBActivity_rebankNumber"
                style="@style/editText"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/E4E4E4"/>
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/act_registered_higth"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            >
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/icon_men"
                android:layout_marginRight="8dp"
                />

            <EditText
                android:id="@+id/et_toName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/act_WithdrawalRMBActivity_name"
                style="@style/editText"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/E4E4E4"/>
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/act_registered_higth"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/icon_kaihuzh"
                android:layout_marginRight="8dp"
                />
            <EditText
                android:id="@+id/et_kaihuhang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/act_WithdrawalRMBActivity_kaihu"
                style="@style/editText"

                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            />
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/act_registered_higth"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            >
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/icon_money_bi"
                android:layout_marginRight="8dp"
                />
            <EditText
                android:id="@+id/et_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/act_WithdrawalRMBActivity_price"
                android:inputType="numberDecimal"
                style="@style/editText"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/E4E4E4"/>

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/act_registered_higth"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
        >
        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/icon_lock"
            android:layout_marginRight="8dp"
            />
        <EditText
            android:id="@+id/et_trade_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/act_WithdrawalRMBActivity_pwd"
            android:inputType="textPassword"
            style="@style/editText"
            />
    </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <Button
            android:id="@+id/btn_tijiao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/act_WithdrawalRMBActivity_tixian"
            android:textColor="@color/white"
            android:background="@drawable/act_login_loging"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:text="@string/act_RechargeRMBActivity_buzhou"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_rmntixian"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/ac_base_ziti_hui"
        android:padding="8dp"
        android:text="@string/act_WithdrawalRMBActivity_text"
        />


        </LinearLayout>
    </ScrollView>

</LinearLayout>
