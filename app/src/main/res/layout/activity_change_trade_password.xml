<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:myxmlns="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/ac_user_login"
    tools:context="com.global.globalonline.activities.user.ChangeTradePasswordActivity">
    <com.global.globalonline.view.TitleView_
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        myxmlns:titletxt="@string/act_user_changetradepassword_title"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/act_ll_biankuang"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/act_registered_higth"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/icon_lock"
                />

            <EditText
                android:id="@+id/et_trade_pwd"
                android:layout_width="match_parent"
                android:minLines="6"
                android:maxLength="18"
                android:layout_height="match_parent"
                style="@style/editText"
                android:inputType="textPassword"
                android:hint="@string/act_user_changetradepassword_oldpwd"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/E4E4E4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/act_registered_higth"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/icon_lock"
                />

            <EditText
                android:id="@+id/et_trade_repwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minLines="6"
                android:maxLength="18"
                style="@style/editText"
                android:inputType="textPassword"
                android:hint="@string/act_user_changetradepassword_newpwd"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/E4E4E4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/act_registered_higth"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_phone"
                />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/editText"
                android:inputType="number"
                android:maxLength="11"
                android:hint="@string/act_user_registered_phone"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/E4E4E4"/>
            <TextView
                android:id="@+id/btn_send_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginRight="4dp"
                android:padding="13dp"
                android:text="@string/act_user_registered_getyanzhengma"
                android:textColor="@color/FFA200"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/E4E4E4"/>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_registered_higth"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/icon_yam"
            android:layout_marginRight="6dp"
            />

        <EditText
            android:id="@+id/et_yanzhengma"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/editText"
            android:hint="@string/act_user_changetradepassword_repwd"
            />
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/E4E4E4"/>
    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <Button
            android:id="@+id/btn_tijiao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/act_user_changetradepassword_tijiao"
            android:textColor="@color/white"
            android:background="@drawable/act_login_loging"
            />
    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:padding="6dp"

        android:text="@string/act_user_changetradepassword_text"

        />
</LinearLayout>
