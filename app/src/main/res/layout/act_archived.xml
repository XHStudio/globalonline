<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:myxmlns="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/ac_base_backgroud"
    android:focusableInTouchMode="true"
    tools:context="com.global.globalonline.activities.RMB.WithdrawalRMBActivity">


    <com.global.globalonline.view.TitleView_
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        myxmlns:titletxt="@string/act_virtualcurrency_archived_title"
        myxmlns:operationtxt="@string/act_virtualcurrency_archived_op"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_registered_higth"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/act_virtualcurrency_archived_keyong"
            android:textSize="@dimen/act_textsize"
            />
        <TextView
            android:id="@+id/tv_keyong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/view_titleview_fanhui"
            android:text="..."
            android:textSize="@dimen/act_textsize"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_registered_higth"
        android:orientation="horizontal"
        android:gravity="top"
        android:paddingLeft="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/act_textsize"
            android:text="@string/act_virtualcurrency_archived_dongjie"
            />
        <TextView
            android:id="@+id/tv_dongjie"
            android:textSize="@dimen/act_textsize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/view_titleview_fanhui"
            android:text="..."

            />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_registered_higth"
        android:background="@color/ac_user_login_phone"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        >

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/icon_price"
            android:layout_marginRight="6dp"
            />

        <EditText
            android:id="@+id/et_dizhi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/act_virtualcurrency_archived_address"
            style="@style/editText"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_registered_higth"
        android:background="@color/ac_user_login_phone"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        >

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/icon_bi_num"
            android:layout_marginRight="6dp"
            />
        <EditText
            android:id="@+id/et_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:hint="@string/act_virtualcurrency_archived_number"
            style="@style/editText"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_registered_higth"
        android:background="@color/ac_user_login_phone"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        >
        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/icon_lock"
            android:layout_marginRight="6dp"
            />
        <EditText
            android:id="@+id/et_trade_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:hint="@string/act_virtualcurrency_archived_pwd"
            style="@style/editText"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        >
        <Button
            android:id="@+id/btn_tijiao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/act_virtualcurrency_archived_tijiao"
            android:textColor="@color/white"
            android:background="@drawable/act_login_loging"
            />
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/act_virtualcurrency_archived_miaoshu"
        />

    <TextView
        android:id="@+id/tv_shuoming"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/ac_base_ziti_hui"
        android:text="@string/act_virtualcurrency_archived_text"
        />


        </LinearLayout>
    </ScrollView>

</LinearLayout>
